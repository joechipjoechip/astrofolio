---
const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		/* Customs */
		--stepHeight: calc(100vh - 180px);
		--stepHeight: 90vh;
		--margeSmall: 0.5rem;
		--margeMedium: 0.75rem;
		--margeBig: 1.25rem;
		
		--borderRadiusBig: 6rem;
		--borderRadiusMedium: 3rem;
		--borderRadiusSmall: 2rem;
		--borderRadiusSmallest: 1rem;

		--scrollbar-width: 0.25rem;

		--transitionDurationMedium: 0.3s;
		--transitionDurationShort: 0.18s;
		--transitionDurationLong: 0.7s;
		--transitionDurationVeryLong: 1.7s;
		--transitionDurationVeryVeryLong: 2.4s;

		--bg-white-015: rgba(255,255,255,0.015);
		--bg-white-05: rgba(255,255,255,0.05);
		--bg-white-15: rgba(255,255,255,0.15);
		--bg-white-25: rgba(255,255,255,0.25);
		--bg-white-35: rgba(255,255,255,0.35);
		--bg-white-45: rgba(255,255,255,0.45);
		--bg-white-55: rgba(255,255,255,0.55);

		--bg-white-65: rgba(255,255,255,0.65);
		--bg-white-70: rgba(255,255,255, 0.7);
		--bg-white-75: rgba(255,255,255,0.75);
		--bg-white-80: rgba(255,255,255, 0.8);
		--bg-white-85: rgba(255,255,255,0.85);
		--bg-white-90: rgba(255,255,255, 0.9);
		--bg-white-95: rgba(255,255,255,0.95);
		--bg-white-100: #ffffff;



		--bg-white-45: rgba(255,255,255, 0.45);
		--bg-white-40: rgba(255,255,255, 0.4);



		--bg-black-85: rgba(0,0,0, 0.85);
		--bg-black-75: rgba(0,0,0, 0.75);
		--bg-black-70: rgba(0,0,0, 0.70);
		--bg-black-65: rgba(0,0,0, 0.65);
		--bg-black-55: rgba(0,0,0, 0.55);
		--bg-black-45: rgba(0,0,0, 0.45);
		--bg-black-40: rgba(0,0,0, 0.40);
		--bg-black-35: rgba(0,0,0, 0.35);
		--bg-black-30: rgba(0,0,0, 0.30);
		--bg-black-25: rgba(0,0,0, 0.25);
		--bg-black-20: rgba(0,0,0, 0.20);
		--bg-black-15: rgba(0,0,0, 0.15);
		--bg-black-05: rgba(0,0,0, 0.05);

		--navbarIconWidth: 3rem;
		--navbarIconBorderRadius: 1rem;

		--font-size-smallest: 0.75rem;
		--font-size-small: 1rem;
		--font-size-medium-minus: 1.25rem;
		--font-size-medium: 1.5rem;
		--font-size-big: 1.75rem;
		--font-size-bigest: 2.25rem;
		
	}
	html {
		font-family: system-ui, sans-serif;

		font-size: 8px;
	
		@media #{$desktopLarge}{
			font-size: 11px;
		}

		@media #{$desktopVeryLarge}{
			font-size: 13px;
		}
	}

	body {
		margin: 0;
		padding: 0;
		overflow: hidden;

		/* // font-family: "Playfair Display";
		font-family: "Roboto"; */
		font-weight: 300;

		/* // letter-spacing: 1.7px; */

		background-color: rgb(18, 18, 18);

		color: rgba(255,255,255,0.8);

		-webkit-touch-callout: none; /* iOS Safari */
		-webkit-user-select: none; /* Safari */
		-khtml-user-select: none; /* Konqueror HTML */
		-moz-user-select: none; /* Old versions of Firefox */
			-ms-user-select: none; /* Internet Explorer/Edge */
				user-select: none; /* Non-prefixed version, currently
									supported by Chrome, Edge, Opera and Firefox */
	}

	img {
		-webkit-user-drag: none;
		-khtml-user-drag: none;
		-moz-user-drag: none;
		-o-user-drag: none;
		user-drag: none;
	}
</style>
